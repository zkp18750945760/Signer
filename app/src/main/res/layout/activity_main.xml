<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RadioGroup
        android:id="@+id/rgTag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="3dp">

        <RadioButton
            android:id="@+id/rbHome"
            style="@style/BotttomTagStyle"
            android:drawableTop="@drawable/home_selector"
            android:text="主页" />

        <RadioButton
            android:id="@+id/rbActivity"
            style="@style/BotttomTagStyle"
            android:drawableTop="@drawable/activity_selector"
            android:text="活动" />

        <RadioButton
            android:id="@+id/rbMe"
            style="@style/BotttomTagStyle"
            android:drawableTop="@drawable/me_selector"
            android:text="我的" />

    </RadioGroup>

    <FrameLayout
        android:id="@+id/flMainContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/rgTag" />

</RelativeLayout>
