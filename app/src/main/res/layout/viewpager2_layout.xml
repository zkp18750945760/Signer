<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ivBack" />

    <com.zhouwei.indicatorview.CircleIndicatorView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/viewPagerIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        app:enableIndicatorSwitch="true"
        app:fill_mode="none"
        app:indicatorColor="@color/colorOrange"
        app:indicatorRadius="5dp"
        app:indicatorSelectColor="@color/colorDarkOrange"
        app:indicatorSpace="1dp" />

</RelativeLayout>