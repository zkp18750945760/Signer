<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- AppCompatEditText默认状态状态设置底线颜色 -->
        <item name="colorControlNormal">@color/colorBtnNormal</item>
        <!-- AppCompatEditText选择的底线颜色 -->
        <item name="colorControlActivated">@color/colorBtnPressed</item>
    </style>

    <style name="BotttomTagStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:drawablePadding">3dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

    <style name="DialogStyleBottom" parent="android:Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/AnimBottom</item>
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">false</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@color/transparent</item>
        <!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
        <item name="android:windowDisablePreview">true</item>
    </style>

    <!--默认样式 注意* 样式只可修改，不能删除任何一项 否则报错-->
    <style name="picture.default.style" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!--标题栏背景色-->
        <item name="colorPrimary">@color/bar_grey</item>
        <!--状态栏背景色-->
        <item name="colorPrimaryDark">@color/bar_grey</item>
        <!--是否改变图片列表界面状态栏字体颜色为黑色-->
        <item name="picture.statusFontColor">false</item>
        <!--返回键图标-->
        <item name="picture.leftBack.icon">@drawable/picture_back</item>
        <!--标题下拉箭头-->
        <item name="picture.arrow_down.icon">@drawable/arrow_down</item>
        <!--标题上拉箭头-->
        <item name="picture.arrow_up.icon">@drawable/arrow_up</item>
        <!--标题文字颜色-->
        <item name="picture.title.textColor">@color/white</item>
        <!--标题栏右边文字-->
        <item name="picture.right.textColor">@color/white</item>
        <!--图片列表勾选样式-->
        <item name="picture.checked.style">@drawable/checkbox_selector</item>
        <!--开启图片列表勾选数字模式-->
        <item name="picture.style.checkNumMode">false</item>
        <!--选择图片样式0/9-->
        <item name="picture.style.numComplete">false</item>
        <!--图片列表底部背景色-->
        <item name="picture.bottom.bg">@color/color_fa</item>
        <!--图片列表预览文字颜色-->
        <item name="picture.preview.textColor">@color/tab_color_true</item>
        <!--图片列表已完成文字颜色-->
        <item name="picture.complete.textColor">@color/tab_color_true</item>
        <!--图片已选数量圆点背景色-->
        <item name="picture.num.style">@drawable/num_oval</item>
        <!--预览界面标题文字颜色-->
        <item name="picture.ac_preview.title.textColor">@color/white</item>
        <!--预览界面已完成文字颜色-->
        <item name="picture.ac_preview.complete.textColor">@color/tab_color_true</item>
        <!--预览界面标题栏背景色-->
        <item name="picture.ac_preview.title.bg">@color/bar_grey</item>
        <!--预览界面底部背景色-->
        <item name="picture.ac_preview.bottom.bg">@color/bar_grey_90</item>
        <!--预览界面状态栏颜色-->
        <item name="picture.status.color">@color/bar_grey_90</item>
        <!--预览界面返回箭头-->
        <item name="picture.preview.leftBack.icon">@drawable/picture_back</item>
        <!--是否改变预览界面状态栏字体颜色为黑色-->
        <item name="picture.preview.statusFontColor">false</item>
        <!--裁剪页面标题背景色-->
        <item name="picture.crop.toolbar.bg">@color/bar_grey</item>
        <!--裁剪页面状态栏颜色-->
        <item name="picture.crop.status.color">@color/bar_grey</item>
        <!--裁剪页面标题文字颜色-->
        <item name="picture.crop.title.color">@color/white</item>
        <!--相册文件夹列表选中图标-->
        <item name="picture.folder_checked_dot">@drawable/orange_oval</item>
    </style>

    <style name="transparent_Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!--边框-->
        <item name="android:windowIsFloating">true</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item>
        <!--半透明-->
        <item name="android:windowNoTitle">true</item>
        <!--无标题-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--背景透明-->
        <item name="android:backgroundDimEnabled">true</item>
        <!--模糊-->
    </style>

    <!--对话框的样式-->
    <style name="DialogActivity" parent="Theme.AppCompat">
        <!--对话框背景 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--边框 -->
        <item name="android:windowFrame">@null</item>
        <!--没有标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 是否浮现在Activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!--背景透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 是否有覆盖 -->
        <item name="android:windowContentOverlay">@null</item>
        <!--背景变暗-->
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <!--对话框的样式-->
    <style name="UpdateDialog" parent="DialogActivity">
        <!--背景变暗-->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="Wel_WelcomeScreenBaseTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- See v19 styles -->
    </style>

    <style name="Wel_TextContainer">
        <item name="android:paddingTop">@dimen/wel_text_top_padding</item>
        <item name="android:paddingBottom">@dimen/wel_text_bottom_padding</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Wel_TransparentActionBar" parent="Base.Widget.AppCompat.ActionBar">
        <item name="android:background">@color/wel_transparent</item>
    </style>

    <style name="WelcomeScreenButton" parent="Widget.AppCompat.Button">
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginLeft">@dimen/wel_flat_button_horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/wel_flat_button_vertical_margin</item>
        <item name="android:layout_marginRight">@dimen/wel_flat_button_horizontal_margin</item>
        <item name="android:layout_marginBottom">@dimen/wel_flat_button_vertical_margin</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:background">?attr/welcomeButtonBackground</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="WelcomeScreenButton.Skip">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="WelcomeScreenButton.Next">
        <item name="android:src">@drawable/wel_ic_chevron_right_white_24dp</item>
        <item name="android:tint">?android:attr/textColorPrimary</item>
    </style>

    <style name="WelcomeScreenButton.Prev">
        <item name="android:src">@drawable/wel_ic_chevron_left_white_24dp</item>
        <item name="android:tint">?android:attr/textColorPrimary</item>
    </style>

    <style name="WelcomeScreenButton.Done">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:tint">?android:attr/textColorPrimary</item>
        <item name="android:src">@drawable/wel_ic_done_white</item>
    </style>

    <style name="WelcomeScreenButton.Borderless" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:singleLine">true</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:background">?attr/welcomeButtonBackground</item>
    </style>

    <style name="WelcomeScreenButton.LogIn" parent="WelcomeScreenButton.Borderless">
        <item name="android:text">@string/wel_log_in</item>
    </style>
    |

    <style name="WelcomeScreenButton.SignUp" parent="WelcomeScreenButton.Borderless">
        <item name="android:text">@string/wel_sign_up</item>
    </style>

    <style name="WelcomeScreenDivider">
        <item name="android:background">#00000000</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="WelcomeScreenPageIndicator">
        <item name="indicatorColor">@color/wel_indicator_color_secondary_theme_dark</item>
        <item name="currentPageColor">@color/wel_indicator_color_primary_theme_dark</item>
        <item name="animation">fade</item>
    </style>

    <style name="WelcomeScreenText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:layout_marginRight">@dimen/wel_text_horizontal_margin</item>
        <item name="android:layout_marginLeft">@dimen/wel_text_horizontal_margin</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="WelcomeScreenText.Large">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:layout_marginBottom">@dimen/wel_title_bottom_margin</item>
    </style>

    <style name="WelcomeScreenText.Title" parent="WelcomeScreenText.Large">
        <item name="android:textSize">@dimen/wel_title_text_size</item>
    </style>

    <style name="WelcomeScreenText.Title.Centered">
        <item name="android:gravity">center_horizontal</item>
    </style>


    <style name="WelcomeScreenTheme" parent="Wel_WelcomeScreenBaseTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="welcomeLayoutFitsSystemWindows">true</item>
        <item name="android:textColorPrimary">@color/wel_text_primary_theme_dark</item>
        <item name="android:textColorSecondary">@color/wel_text_primary_theme_dark</item>
        <item name="welcomeButtonBackground">@drawable/wel_button_borderless_background</item>
        <item name="welcomeButtonSkipStyle">@style/WelcomeScreenButton.Skip</item>
        <item name="welcomeButtonNextStyle">@style/WelcomeScreenButton.Next</item>
        <item name="welcomeButtonPrevStyle">@style/WelcomeScreenButton.Prev</item>
        <item name="welcomeButtonDoneStyle">@style/WelcomeScreenButton.Done</item>
        <item name="welcomeButtonDoneText">@string/wel_done</item>
        <item name="welcomeButtonSkipText">@string/wel_skip</item>
        <item name="welcomeButtonBarFirstStyle">@style/WelcomeScreenButton.LogIn</item>
        <item name="welcomeButtonBarSecondStyle">@style/WelcomeScreenButton.SignUp</item>
        <item name="welcomeButtonBarBackground">@color/wel_button_bar_background_dark</item>
        <item name="welcomeDividerStyle">@style/WelcomeScreenDivider</item>
        <item name="welcomeIndicatorStyle">@style/WelcomeScreenPageIndicator</item>
        <item name="welcomeNormalTextStyle">@style/WelcomeScreenText</item>
        <item name="welcomeLargeTextStyle">@style/WelcomeScreenText.Large</item>
        <item name="welcomeTitleTextStyle">@style/WelcomeScreenText.Title.Centered</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="actionBarStyle">@style/Wel_TransparentActionBar</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:background">@color/wel_transparent</item>
        <item name="background">@color/wel_transparent</item>
        <item name="android:windowBackground">@color/wel_transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="Animation_top_left">
        <item name="android:windowEnterAnimation">@anim/open_top_left</item>
        <item name="android:windowExitAnimation">@anim/close_top_left</item>
    </style>

    <style name="Animation_bottom_left">
        <item name="android:windowEnterAnimation">@anim/open_bottom_left</item>
        <item name="android:windowExitAnimation">@anim/close_bottom_left</item>
    </style>

    <style name="Animation_bottom_right">
        <item name="android:windowEnterAnimation">@anim/open_bottom_right</item>
        <item name="android:windowExitAnimation">@anim/close_bottom_right</item>
    </style>

    <style name="Animation_top_right">
        <item name="android:windowEnterAnimation">@anim/open_top_right</item>
        <item name="android:windowExitAnimation">@anim/close_top_right</item>
    </style>

    <style name="MySeekbarSytle" parent="Base.Widget.AppCompat.SeekBar">
        <item name="android:thumb">@drawable/thumb</item>
        <item name="android:progressDrawable">@drawable/po_seekbar</item>
    </style>

</resources>
